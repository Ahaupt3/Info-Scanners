#!/bin/bash
# Setup
# Execute as SUDO

DIRS='/bin /usr/bin'

errCheck(){
    if $? != 0; then
        echo -e "${RED}Error occurred, couldn't copy to $DIR"
    else echo -e "${GREEN}Copied $DIR successfully!"
    fi
}

# Move files to /bin /usr/bin

DIR='Dependencies'
cd $DIR
echo -e $DIRS | xargs -n 1 cp -vr *
$errCheck
cd ..

DIR='Scripts'
cd $DIR
echo -e $DIRS | xargs -n 1 cp -vr *
$errCheck
cd ..

echo -e '***  SETUP FINISHED  ***'
echo -e '*** RESTART TERMINAL ***'

exit 0